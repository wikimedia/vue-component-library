{
	"compilerOptions": {
		"target": "es2015",
		"useDefineForClassFields": true,
		"module": "es2015",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [ "es2015", "dom" ]
	},
	"include": [ "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue" ]
}
